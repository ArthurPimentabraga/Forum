<%- include ('./partials/header.ejs')%>

<body>
    <%- include ('./partials/navbar.ejs')%>
    <main class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>Realizar pergunta</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/saveQuestion">
                            <label>Título:</label>
                            <input type="text" id="title" class="form-control" placeholder="Título" name="title">
                            <br>
                            <label>Descrição:</label>
                            <textarea name="question" id="question" class="form-control"
                                placeholder="Escreve sua pergunta aqui"></textarea>
                            <br>
                            <button class="btn btn-success">Enviar pergunta</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
<%- include ('./partials/footer.ejs')%>